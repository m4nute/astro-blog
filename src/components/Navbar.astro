---
import { FileText, Github, Linkedin, Mail } from "lucide-react"
---

<nav
  class="sticky top-2 px-5 text-xl py-2 backdrop-blur-md border rounded-xl border-gray-600 border-opacity-50 transition-all
  flex justify-between bg-[#292929]">
  <section class="flex gap-4 h-fit my-auto">
    <a
      target="_blank"
      href="https://www.linkedin.com/in/manuelgudino/"
      class="rounded-lg hover:scale-105 hover:bg-zinc-700 p-1.5 transition-colors duration-150">
      <Linkedin strokeWidth={1.6} size={22} />
    </a>
    <a target="_blank" href="https://github.com/m4nute" class="rounded-lg hover:scale-105 hover:bg-zinc-700 p-1.5 transition-colors duration-150">
      <Github strokeWidth={1.6} size={22} />
    </a>
    <a
      target="_blank"
      href="mailto:mgudinocontacto@gmail.com?"
      class="rounded-lg hover:scale-105 hover:bg-zinc-700 p-1.5 transition-colors duration-150">
      <Mail strokeWidth={1.6} size={22} />
    </a>
    <a href="/cv" class="rounded-lg hover:scale-105 hover:bg-zinc-700 p-1.5 transition-colors duration-150"
      ><FileText strokeWidth={1.6} size={22} /></a
    >
  </section>
  <section class="flex gap-2 h-fit my-auto">
    <a href="/" class="text-base text-white rounded-md hover:bg-zinc-700 py-1.5 px-2 transition-colors duration-150">Home</a>
    <a href="/blog" class="text-base text-white rounded-md hover:bg-zinc-700 py-1.5 px-2.5 transition-colors duration-150">Blog</a>
  </section>
</nav>
